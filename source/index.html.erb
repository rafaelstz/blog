---
pageable: true
---

<!-- Lista todos os posts da pasta /blog -->
<section class="home">

  <% page_articles.each_with_index do |article, i| %>
    <article class="posts">
    
    <% if article.data.link %>
      <h2 class="posts-title"><%= link_to article.title, article.data.link, target: '_blank' %></h2> 
    <% else %>
      <h2 class="posts-title"><%= link_to article.title, article %></h2>
    <% end %>
        
      <div class="posts-info">
        <div class="local"><%= article.data.local %></div>
        <div class="month"><%= article.date.strftime('%B') %></div>
        <div class="year"><%= article.date.strftime('%Y') %></div>
      </div>
      
      <%= article.summary(350, '.') %>
    </article>
  <% end %>

